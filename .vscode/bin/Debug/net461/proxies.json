{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "notes": {
            "matchCondition": {
                "route": "notes",
                "methods": [
                    "GET",
                    "POST",
                    "DELETE"
                ]
            },
            "responseOverrides": {
                "response.statusCode": "200",
                "response.statusReason": "Sucess",
                "response.body": "{\r\n    \"Status\" : \"Success\"\r\n}"
            }
        },
        "note": {
            "matchCondition": {
                "route": "note/{noteId}",
                "methods": [
                    "GET",
                    "DELETE",
                    "PATCH",
                    "PUT"
                ]
            },
            "responseOverrides": {
                "response.statusCode": "200",
                "response.statusReason": "OK",
                "response.body": "{\r\n    \"noteId\" : \"{noteId}\",\r\n    \"description\" : \"don't forget to book a table\",\r\n    \"time\" : \"timestamp\"\r\n}"
            }
        }
    }
}